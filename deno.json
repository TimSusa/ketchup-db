{
  "tasks": {
    "start": "deno run --allow-read --allow-write src/example.ts",
    "dev": "deno run --watch --allow-read --allow-write src/example.ts",
    "test": "deno test --allow-read --allow-write",
    "check": "deno check **/*.ts",
    "lint": "deno lint",
    "fmt": "deno fmt"
  },
  "fmt": {
    "files": {
      "include": ["src/"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuote": false,
      "proseWrap": "preserve"
    }
  },
  "lint": {
    "files": {
      "include": ["src/"]
    },
    "rules": {
      "tags": ["recommended"]
    }
  },
  "imports": {
    "std/": "https://deno.land/std@0.206.0/"
  },
  "compilerOptions": {
    "strict": true,
    "allowJs": false,
    "lib": ["deno.window"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noFallthroughCasesInSwitch": true
  }
}
