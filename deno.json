{
  "name": "ketchup-db",
  "version": "1.0.0",
  "tasks": {
    "start": "deno run --allow-read --allow-write src/examples/example.ts",
    "dev": "deno run --watch --allow-read --allow-write src/examples/example.ts",
    "test": "deno test --allow-read --allow-write",
    "check": "deno check **/*.ts",
    "lint": "deno lint",
    "fmt": "deno fmt"
  },
  "fmt": {
    "include": ["src/"],
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "lint": {
    "include": ["src/"],
    "rules": {
      "tags": ["recommended"]
    }
  },
  "imports": {
    "@/": "./src/"
  },
  "publish": {
    "exclude": ["**/*_test.ts", "**/test_data/", "examples/"]
  },
  "compilerOptions": {
    "strict": true,
    "lib": [
      "DOM",
      "ESNext",
      "DOM.Iterable"
    ],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noFallthroughCasesInSwitch": true
  }
}
